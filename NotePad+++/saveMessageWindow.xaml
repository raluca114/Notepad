<Window x:Class="NotePad___.saveMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotePad___"
        mc:Ignorable="d"
        Title="saveMessageWindow" Height="192" Width="367">
    <Grid Background="#FFF2D6FD" Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="231*"/>
            <ColumnDefinition Width="136*"/>
        </Grid.ColumnDefinitions>
        <TextBlock FontSize="18" TextAlignment="Center" Grid.ColumnSpan="2" Margin="0,19,0,79" >
            There are some unsaved changes.<LineBreak/>Do you really want to quit?
        </TextBlock>
        <Button Background="White" Margin="83,108,62,28" Click="yesResponse">Yes</Button>
        <Button Background="White" Margin="202,108,79,28" Grid.ColumnSpan="2" Click="saveAsResponse">Save As</Button>
    </Grid>
</Window>
